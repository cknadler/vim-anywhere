#!/bin/bash
#
# vim-anywhere - use Vim whenever, wherever
# Author: Chris Knadler
# Homepage: https://www.github.com/cknadler/vim-anywhere

dir=/tmp/vim-anywhere
file=$dir/doc-$(date +"%y%m%d%H%M%S")
mkdir -p $dir

# If we are on Linux
if [[ "$OSTYPE" == "linux-gnu" ]]; then
  # Make file only readable by you

  if [[ -n $KDE_SESSION_VERSION ]] # might want to try KDE_FULL_SESSION instead
  then
	qdbus org.kde.klipper /klipper getClipboardContents > $file # KDE version
  else
    xclip -o -selection clipboard > $file  # GNOME version
  fi
  chmod go-rw $file
  gvim --nofork $file
  if [[ -n $KDE_SESSION_VERSION ]] # might want to try KDE_FULL_SESSION instead
  then
	qdbus org.kde.klipper /klipper setClipboardContents "`cat $file`" # KDE version
  else
	cat $file | xclip -selection clipboard  # GNOME version
  fi

# If we are on OSX
elif [[ "$OSTYPE" == "darwin"* ]]; then
  app=$(osascript $HOME/.vim-anywhere/script/current_app.scpt)
  /usr/local/bin/mvim --nofork $file
  # copy the result and refocus the previous application
  pbcopy < $file
  osascript -e "activate application \"$app\""
fi
